<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.xcy.springbootswagger.util.MyMapper"/>
        </plugin>

        <!--数据库地址-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.6.102:3306/wolf?characterEncoding=UTF-8"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <!--生成的java实体目标文件夹-->
        <javaModelGenerator targetPackage="com.xcy.springbootswagger.model" targetProject="src/main/java"/>

        <!--xml 目标文件夹-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <!--mapper 接口目标文件夹 -->
        <javaClientGenerator targetPackage="com.xcy.springbootswagger.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="user" domainObjectName="User">
            <!--mysql 配置-->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
            <!--oracle 配置-->
            <!--<generatedKey column="fid" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
        </table>
    </context>
</generatorConfiguration>